
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
</div>
<div class="container" style="display:flex;justify-content:center;align-items:center;">
    <div class="row">
        <form class=" s2">
            <div class="row">
                <div class=" s10 m4 18">
                    <label for="username">{{ 'username'|trans }}</label>
                    <input type="text" id="username" name="_username" autocomplete="pseudonyme" value="{{ last_username }}" required="required" />
                </div>
            </div>
            <div class="row">
                <div class=" s10">
                    <label for="password">{{ 'password'|trans }}</label>
                    <input type="password" id="password" name="_password" autocomplete="password" required="required" />
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'remember me'|trans }}</label>
                </div>
            </div>


    <input type="submit" id="_submit" name="_submit" value="{{ 'submit'|trans }}" />
        </form>
    </div>
</div>
</form>





